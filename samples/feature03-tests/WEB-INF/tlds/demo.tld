<?xml version="1.0" encoding="UTF-8"?>
<taglib>
  <tlib-version>1.0</tlib-version>
  <short-name>demo</short-name>
  <uri>http://example.com/tld/demo</uri>

  <tag>
    <name>form</name>
    <description>A demo form tag used to test taglib completions.</description>

    <attribute>
      <name>action</name>
      <required>true</required>
      <rtexprvalue>true</rtexprvalue>
      <type>java.lang.String</type>
      <description>Target URL for the form submit.</description>
    </attribute>

    <attribute>
      <name>method</name>
      <required>false</required>
      <rtexprvalue>true</rtexprvalue>
      <type>java.lang.String</type>
      <description>HTTP method (e.g. GET or POST).</description>
    </attribute>

    <attribute>
      <name>id</name>
      <required>false</required>
      <rtexprvalue>true</rtexprvalue>
      <type>java.lang.String</type>
      <description>HTML id attribute.</description>
    </attribute>

    <attribute>
      <name>class</name>
      <required>false</required>
      <rtexprvalue>true</rtexprvalue>
      <type>java.lang.String</type>
      <description>HTML class attribute.</description>
    </attribute>
  </tag>

  <tag>
    <name>input</name>
    <description>A demo input tag used to test attribute completions.</description>

    <attribute>
      <name>name</name>
      <required>true</required>
      <rtexprvalue>true</rtexprvalue>
      <type>java.lang.String</type>
      <description>Input field name.</description>
    </attribute>

    <attribute>
      <name>value</name>
      <required>false</required>
      <rtexprvalue>true</rtexprvalue>
      <type>java.lang.String</type>
      <description>Initial value.</description>
    </attribute>

    <attribute>
      <name>type</name>
      <required>false</required>
      <rtexprvalue>true</rtexprvalue>
      <type>java.lang.String</type>
      <description>Input type (text, password, hidden...).</description>
    </attribute>

    <attribute>
      <name>disabled</name>
      <required>false</required>
      <rtexprvalue>true</rtexprvalue>
      <type>boolean</type>
      <description>Whether the input is disabled.</description>
    </attribute>
  </tag>

  <tag>
    <name>if</name>
    <description>A demo conditional tag (like JSTL c:if).</description>

    <attribute>
      <name>test</name>
      <required>true</required>
      <rtexprvalue>true</rtexprvalue>
      <type>boolean</type>
      <description>Condition expression.</description>
    </attribute>
  </tag>
</taglib>
